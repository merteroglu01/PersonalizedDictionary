<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<TabPane prefHeight="400.0" prefWidth="640.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.merteroglu.controller.Controller">
    <tabs>
        <Tab style="height: 640px;" text="Main">
            <content>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-min-height: 640;">
                            <children>
                                <Label fx:id="infoText" alignment="CENTER" layoutX="184.0" layoutY="285.0" prefHeight="27.0" prefWidth="345.0" style="&#10;" text="Welcome to Your Personal Dictionary ! :)" textAlignment="CENTER" textFill="red" wrapText="false">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="addForeignWordTextField" layoutX="79.0" layoutY="233.0" promptText="Foreign Word" />
                                <TextField fx:id="addNativeWordTextField" layoutX="272.0" layoutY="233.0" promptText="Native Word" />
                                <Button fx:id="addWordBtn" layoutX="460.0" layoutY="233.0" mnemonicParsing="false" onAction="#saveToDictionary" text="Add" textAlignment="CENTER" />
                                <TextField fx:id="tryForeignWordTextField" focusTraversable="false" layoutX="237.0" layoutY="99.0" promptText="Foreign Word" />
                                <TextField fx:id="tryNativeWordTextField" layoutX="79.0" layoutY="149.0" promptText="Native Word" />
                                <Text fx:id="foreignWordText" layoutX="95.0" layoutY="117.0" lineSpacing="3.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ForeignWordText" textAlignment="CENTER" />
                                <Text fx:id="nativeWordText" layoutX="271.0" layoutY="167.0" lineSpacing="3.0" strokeType="OUTSIDE" strokeWidth="0.0" text="NativeWordText" textAlignment="CENTER" />
                                <ButtonBar layoutX="122.0" layoutY="14.0" prefHeight="40.0" prefWidth="397.0">
                                    <buttons>
                                        <Button fx:id="dailyExerciseBtn" mnemonicParsing="false" onAction="#dailyMod" text="Daily Exercise" />
                                        <Button fx:id="fullExerciseBtn" mnemonicParsing="false" onAction="#allTimeMod" text="Full Exercise" />
                                        <Button fx:id="weeklyExerciseBtn" mnemonicParsing="false" onAction="#weeklyMod" text="Weekly Exercise" />
                                    </buttons>
                                </ButtonBar>
                                <VBox layoutX="403.0" layoutY="66.0" prefHeight="141.0" prefWidth="156.0">
                                    <children>
                                        <Button fx:id="checkBtn" alignment="CENTER" mnemonicParsing="false" onAction="#check" style="-fx-min-width: 130;" text="Check !" textAlignment="CENTER">
                                            <VBox.margin>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </VBox.margin>
                                        </Button>
                                        <Button mnemonicParsing="false" style="-fx-min-width: 130;" text="Show the Answer">
                                            <VBox.margin>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </VBox.margin>
                                        </Button>
                                        <Button mnemonicParsing="false" style="-fx-min-width: 130;" text="Next Word">
                                            <VBox.margin>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </VBox.margin>
                                        </Button>
                                    </children>
                                </VBox>
                                  <Button layoutX="164.0" layoutY="214.0" mnemonicParsing="false" prefHeight="27.0" text="Shuffle Mod" />
                                  <ToggleButton fx:id="changeInputAreaToggleBtn" layoutX="212.0" layoutY="203.0" mnemonicParsing="false" onAction="#changeExerciseType" text="Change Exercise Type" />
                            </children>
                        </AnchorPane>
                    </children>
                </VBox>
            </content>
        </Tab>
        <Tab text="Untitled Tab 2">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>
        <Tab text="Untitled Tab">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>
    </tabs>
</TabPane>
